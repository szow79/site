<p id="notice"><%= notice %></p>

<div class='proj-container'>
  <% @projects.each do |project| %>
    <div class='proj proj-<%= project.id %>'>

      <% if project.unique %>
        <%= link_to image_tag(project.name + '.png'), project, data: { no_turbolink: true } %>
      <% elsif project.external_link.length > 0 %>
        <%= link_to image_tag(project.name + '.png'), project.external_link %>
      <% else %>
        <% if project.id == 7 %>
          <%= image_tag(project.name + '.png', :class => 'original') %>
          <%= image_tag('table-unfold.png', :class => 'hover') if project.id == 7 %>
        <% else %>
          <%= image_tag(project.name + '.png') %>
        <% end %>
      <% end %>
  
    </div>
  <% end %>
</div>
<br>
